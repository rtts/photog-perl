#!/usr/bin/env perl
use warnings;
use strict;
print <<EOF
photog-thumbnail - Creates a thumbnail of an image

Usage: photog-thumbnail original.jpg thumbnail.jpg
EOF
and exit if @ARGV != 2;

my $command = "convert '$ARGV[0]' -resize 5000x366 -unsharp 1.5x+0.7+0.02 -quality 88% '$ARGV[1]'";

exit !!system($command);
